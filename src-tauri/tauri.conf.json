{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ntfy.desktop",
  "version": "26.2.1",
  "identifier": "com.anthony.ntfy.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ntfy.desktop",
        "url": "https://ntfy.sh/app",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/*",
      "resources/*"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
